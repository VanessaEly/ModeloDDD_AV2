@model IEnumerable<ModeloDDD_AV2.MVC.ViewModels.AutoDeInfracaoViewModel>

@{
    ViewBag.Title = "Auto de Infração";
}

<h2>Listagem de Autos de Infrações</h2>

<p>
    @Html.ActionLink("Criar Novo Auto de Infração", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Gravidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Atenuante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Agravante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Multa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProcessoId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Gravidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Atenuante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Agravante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Multa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProcessoId)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AutoDeInfracaoId }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.AutoDeInfracaoId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.AutoDeInfracaoId })
        </td>
    </tr>
}

</table>
