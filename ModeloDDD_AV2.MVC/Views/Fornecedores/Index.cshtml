@model IEnumerable<ModeloDDD_AV2.MVC.ViewModels.FornecedorViewModel>

@{
    ViewBag.Title = "Listagem de Fornecedores";
}

<h2>Listagem de Fornecedores</h2>

<p>
    @Html.ActionLink("Criar Novo Fornecedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InscricaoMunicipal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceitaBruta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FornecedorId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cnpj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InscricaoMunicipal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceitaBruta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FornecedorId)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FornecedorId }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.FornecedorId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.FornecedorId })
        </td>
    </tr>
}

</table>
